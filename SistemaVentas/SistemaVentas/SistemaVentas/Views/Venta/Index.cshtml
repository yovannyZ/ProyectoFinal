@model IEnumerable<SistemaVentas.Models.Venta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Venta", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TipoComprobante.Descripcion)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TotalPagar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        
       
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.TipoComprobante.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPagar)
        </td>
        <td>
            
            @Html.ActionLink("Detalle Venta", "Details", new { id=item.IdVenta }) |
          
        </td>
    </tr>
}

</table>
