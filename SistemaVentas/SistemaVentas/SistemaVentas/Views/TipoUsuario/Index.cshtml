@model IEnumerable<SistemaVentas.Models.TipoUsuario>

@{
    ViewBag.Title = "Index";
}

<h2>Gestion de Tipos de Usuarios</h2>

<p>
    @Html.ActionLink("Crear nuevo tipo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { Id=item.IdTipoUsuario }) |
            @Html.ActionLink("Ver Detalle", "Details", new { Id=item.IdTipoUsuario }) |
            @Html.ActionLink("Eliminar", "Delete", new { Id=item.IdTipoUsuario })
        </td>
    </tr>
}

</table>
